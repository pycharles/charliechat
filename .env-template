# AWS Configuration
AWS_REGION=                                  # Your AWS Region  
AWS_ACCESS_KEY_ID=                           # Your Access Key ID
AWS_SECRET_ACCESS_KEY=                       # Your Secret Access Key
#AWS_SESSION_TOKEN=your_session_token_here   # Optional, for temporary credentials

# Bedrock AI Configuration
# BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0  # Fast, cheap (default)
# BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0  # Balanced performance
# BEDROCK_MODEL_ID=anthropic.claude-3-opus-20240229-v1:0    # Most capable

# BEDROCK_MAX_TOKENS=1000  # Control response length (100-4000)

# Bedrock Knowledge Base Configuration
# BEDROCK_KB_ID=your_knowledge_base_id_here  # Optional: Knowledge Base ID for enhanced context

# Custom system prompt (must include {person}, {question}, and {context} placeholders)
# SYSTEM_PROMPT_TEMPLATE=You are a helpful assistant representing {person}. Answer {question} professionally. {context}

# Persona Configuration
# DEFAULT_PERSON=Charles  # Default person name when Lex slot is missing (allows bot reuse)

# Debug Configuration
# DEBUG_LOGGING_DEV=true   # Enable debug logging for local development (true/false)
# DEBUG_LOGGING_PROD=false # Enable debug logging in production Lambda (true/false)

# Feedback Email Configuration
FEEDBACK_SENDER_EMAIL=                    # Email address to send feedback from (must be verified in SES)
FEEDBACK_RECIPIENT_EMAIL=                 # Email address to receive feedback emails